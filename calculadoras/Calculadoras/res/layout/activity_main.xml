<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculadoras.MainActivity" >

 <Button
     android:id="@+id/btnCalculaCienti"
     style="@style/btnEstilo1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/btnCalBasic"
     android:layout_below="@+id/btnCalBasic"
     android:layout_marginTop="32dp"
     android:onClick="onIngresar"
     android:text="CalculadoraCientifica"
/>

 <Button
     android:id="@+id/btnCalculaBasic"
     style="@style/btnEstilo1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/btnCalculaCienti"
     android:layout_below="@+id/btnCalculaCienti"
     android:layout_marginTop="34dp"
     android:onClick="onIngresar"
     android:text="CalculadoraBasica" />

</RelativeLayout>
